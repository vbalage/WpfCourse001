<Window x:Class="WpfCourse001.Exercise1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCourse001"
        mc:Ignorable="d"
        Title="Exercise1" Height="300" Width="300">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="10"></Setter>
            </Style>
        </Grid.Resources>

        <Button Grid.Row="0" Grid.Column="0" Content="Press" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button Grid.Row="0" Grid.Column="1" Content="Press" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Button Grid.Row="1" Grid.Column="0" Content="Press" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Press" VerticalAlignment="Center" HorizontalAlignment="Left"/>
    </Grid>
</Window>

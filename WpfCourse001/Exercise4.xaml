<Window x:Class="WpfCourse001.Exercise4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCourse001"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Exercise4" Height="300" Width="300">
    <Canvas>
        <Canvas.Resources>
            <sys:Double x:Key="X">100</sys:Double>
            <sys:Double x:Key="Y">150</sys:Double>
        </Canvas.Resources>
        <Button Canvas.Top="{StaticResource Y}" Canvas.Left="{StaticResource X}" Content="X: 100, Y: 150"/>
    </Canvas>
</Window>
